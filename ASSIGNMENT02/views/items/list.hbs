<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>My Items</h2>
  <a class="btn btn-success" href="/items/add">Add Item</a>
</div>

{{#if items.length}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Location</th>
        <th>Date Found</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.location}}</td>
          <td>{{this.dateFound}}</td>
          <td>
            <a class="btn btn-sm btn-primary" href="/items/edit/{{this._id}}">Edit</a>
            <form action="/items/delete/{{this._id}}?_method=DELETE" method="post" style="display:inline" onsubmit="return confirm('Delete this item?');">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>No items yet. <a href="/items/add">Add one</a>.</p>
{{/if}}
