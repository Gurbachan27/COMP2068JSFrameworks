<h2>All Items</h2>

<a href="/items/add" class="btn btn-primary mb-3">Add New Item</a>

{{#if items.length}}
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Location</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each items}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.type}}</td>
      <td>{{this.location}}</td>
      <td>{{this.date}}</td>
      <td>
        <a href="/items/edit/{{this._id}}" class="btn btn-sm btn-warning">Edit</a>
        <a href="/items/delete/{{this._id}}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>No items found. <a href="/items/add">Add an item</a>.</p>
{{/if}}
