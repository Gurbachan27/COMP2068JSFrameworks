<h2>Edit Item</h2>

<form action="/items/edit/{{item._id}}" method="POST" class="mt-3">
  <div class="mb-3">
    <label for="title" class="form-label">Item Title</label>
    <input
      type="text"
      id="title"
      name="title"
      class="form-control"
      required
      value="{{item.title}}">
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea
      id="description"
      name="description"
      class="form-control"
      rows="3"
      required>{{item.description}}</textarea>
  </div>

  <div class="mb-3">
    <label for="type" class="form-label">Type</label>
    <select id="type" name="type" class="form-select" required>
      <option value="Lost" {{#ifEquals item.type "Lost"}}selected{{/ifEquals}}>Lost</option>
      <option value="Found" {{#ifEquals item.type "Found"}}selected{{/ifEquals}}>Found</option>
    </select>
  </div>

  <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input
      type="text"
      id="location"
      name="location"
      class="form-control"
      value="{{item.location}}">
  </div>

  <button type="submit" class="btn btn-success">Update Item</button>
  <a href="/items" class="btn btn-secondary ms-2">Cancel</a>
</form>
