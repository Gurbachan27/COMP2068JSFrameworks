<h2>Edit Item</h2>

<form action="/items/edit/{{item._id}}?_method=PUT" method="post">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input name="name" type="text" class="form-control" value="{{item.name}}" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Description</label>
    <textarea name="description" class="form-control" rows="4" required>{{item.description}}</textarea>
  </div>
  <div class="mb-3">
    <label class="form-label">Location</label>
    <input name="location" type="text" class="form-control" value="{{item.location}}">
  </div>
  <button class="btn btn-primary" type="submit">Save changes</button>
  <a class="btn btn-secondary" href="/items/list">Cancel</a>
</form>
