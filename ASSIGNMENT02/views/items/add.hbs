<h2>Add Item</h2>

{{#if errors}}
  <div class="alert alert-danger">
    <ul class="mb-0">
      {{#each errors}}<li>{{this.msg}}</li>{{/each}}
    </ul>
  </div>
{{/if}}

<form action="/items/add" method="post">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input name="name" type="text" class="form-control" value="{{name}}" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Description</label>
    <textarea name="description" class="form-control" rows="4" required>{{description}}</textarea>
  </div>
  <div class="mb-3">
    <label class="form-label">Location</label>
    <input name="location" type="text" class="form-control" value="{{location}}">
  </div>
  <button class="btn btn-primary" type="submit">Add Item</button>
</form>
