<h2>All Lost & Found Reports</h2>

{{#if reports.length}}
    <div class="row">
        {{#each reports}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {{#if image}}
                        <img src="/uploads/{{image}}" class="card-img-top" alt="{{title}}">
                    {{/if}}
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                        <span class="badge {{#if (eq status "Lost")}}bg-danger{{else}}bg-success{{/if}}">
                            {{status}}
                        </span>
                        <p class="mt-2"><strong>Contact:</strong> {{contact}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <p>No reports yet. Be the first to add one!</p>
{{/if}}
